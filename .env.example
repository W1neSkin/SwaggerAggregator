# ============================================
# Swagger Aggregator - Environment Variables
# Copy this file to .env and fill in values
# ============================================

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/swagger_aggregator
# For Neon (cloud): postgresql+asyncpg://user:pass@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# --- Backend Auth ---
# Secret key for signing JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-to-a-random-secret-key
# JWT token expiry in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Encryption ---
# Master key for encrypting user secrets (generate with: openssl rand -hex 32)
# WARNING: If you change this, all stored secrets become unreadable!
MASTER_ENCRYPTION_KEY=change-me-to-a-random-master-key

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:19006

# --- Backend Server ---
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
